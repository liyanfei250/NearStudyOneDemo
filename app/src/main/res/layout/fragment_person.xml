<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match_match"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/titleBack"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorUserBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- sada -->
            <RelativeLayout
                android:id="@+id/user_pan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/user_center_intro_height"
                android:padding="14dp"
                android:background="@color/colorWhite">

                <view.CircleImageView

                    android:id="@+id/user_image"
                    android:layout_width="101dp"
                    android:layout_height="101dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_image_default"/>

                <RelativeLayout
                    android:layout_toEndOf="@id/user_image"
                    android:layout_toRightOf="@id/user_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/fast_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="18sp"
                        android:text="点击立即登录"/>

                </RelativeLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/user_info"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:background="@color/colorWhite">

                <TextView
                    style="@style/wrap_wrap"
                    android:drawableLeft="@drawable/ic_user_info"
                    android:drawableStart="@drawable/ic_user_info"
                    android:text="个人资料"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_hor"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorUserBackground"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>





            <RelativeLayout
                android:id="@+id/user_bill"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:background="@color/colorWhite">

                <TextView
                    style="@style/wrap_wrap"
                    android:drawableLeft="@drawable/ic_bill"
                    android:drawableStart="@drawable/ic_bill"
                    android:text="个人账单"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_hor"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/system_setting"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:background="@color/colorWhite">

                <TextView
                    style="@style/wrap_wrap"
                    android:drawableLeft="@drawable/setting"
                    android:drawableStart="@drawable/setting"
                    android:text="系统设置"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_hor"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
